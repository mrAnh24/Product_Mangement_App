<Window x:Class="DatabaseApp.InvoiceManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseApp" ResizeMode="NoResize"
        xmlns:userControls="clr-namespace:DatabaseApp.View.UserControls"
        mc:Ignorable="d"  WindowStartupLocation="CenterScreen"
        Title="Invoice Management" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <userControls:MenuBar Margin=" 0,0,0,5"/>
        </Grid>

        <Grid Grid.Row="1" Margin="10,0,10,0" Background="SteelBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBox Name="tbSearchBox" FontSize="16" Height="26" Width="auto" Margin="10,0,5,0"/>
                <Button x:Name="btnSearchClear" Width="10" Height="auto" HorizontalAlignment="Right" Content="X"
                    Background="LightGray" Foreground="Transparent" BorderThickness="0"
                    Margin="8" Click="btnSearchClear_Click"/>
            </Grid>

            <Grid Grid.Column="1">
                <Button Name="btnSearch" Content="Search" HorizontalAlignment="Right" Height="26"
                        Cursor="Hand" Margin="0,0,10,0" Click="btnSearch_Click"/>
            </Grid>

        </Grid>

        <Grid Grid.Row="2" Margin="10,0,10,10" Background="SteelBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <DataGrid Name="dgInvoice" CanUserAddRows="False" CanUserDeleteRows="False" Margin="10,10,10,10"
                          AlternatingRowBackground="LightGray" AlternationCount="2"
                          IsReadOnly="True" Grid.ColumnSpan="2" SelectionMode="Single"
                          AutoGenerateColumns="True" AutoGeneratedColumns="dgInvoice_AutoGeneratedColumns"
                          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <EventSetter Event="Selected" Handler="DataGridRow_Selected"/>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>

            <Grid Grid.Column="1" Margin="0,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.11*"/>
                    <RowDefinition Height="0.11*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.2*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <ComboBox Name="cbFilter1" IsReadOnly="True" IsEditable="False" Width="auto"
                              Foreground="Black" VerticalAlignment="Top"
                              SelectionChanged="cbFilter1_SelectionChanged">
                        <ComboBoxItem Content="Full Detail"/>
                        <ComboBoxItem Content="Customer"/>
                        <ComboBoxItem Content="Location"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>
                </Grid>

                <Grid Grid.Row="1">
                    <ComboBox Name="cbFilter2" IsReadOnly="True" IsEditable="False" Width="auto"
                              Foreground="Black" VerticalAlignment="Top" IsEnabled="False"
                              SelectionChanged="cbFilter2_SelectionChanged">
                        <ComboBoxItem Name="cbCustomerID" Content="CustomerID"/>
                        <ComboBoxItem Name="cbUsername" Content="Username"/>
                        <ComboBoxItem Name="cbInputName" Content="InputName"/>
                        <ComboBoxItem Name="cbGender" Content="Gender"/>

                        <ComboBoxItem Name="cbCountry" Content="Country"/>
                        <ComboBoxItem Name="cbCity" Content="City"/>
                        <ComboBoxItem Name="cbRegion" Content="Region"/>
                        <ComboBoxItem Name="cbAddress" Content="Address"/>

                        <ComboBoxItem Name="cbPostalCode" Content="Postal code"/>
                        <ComboBoxItem Name="cbPaymentMethod" Content="Payment method"/>
                        <ComboBoxItem Name="cbCouponCode" Content="Coupon code"/>
                        <ComboBoxItem Name="cbPaymentStatus" Content="Payment status"/>
                    </ComboBox>
                </Grid>

                <Grid Grid.Row="2" Background="WhiteSmoke">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="5">
                            <TextBlock Text="Number of customer :"/>
                            <TextBlock Name="txtCustomer" Foreground="ForestGreen"/>
                            <TextBlock Text="Number of sold products :"/>
                            <TextBlock Name="txtProduct" Foreground="ForestGreen"/>
                            <TextBlock Text="Best selling product :"/>
                            <TextBlock Name="txt1Product" Foreground="ForestGreen"/>
                            <TextBlock Text="Income :"/>
                            <TextBlock Name="txtIncome" Foreground="ForestGreen"/>
                            <TextBlock Text="Highest bill :"/>
                            <TextBlock Name="txtHighest" Foreground="ForestGreen"/>
                            <TextBlock Text="Most profit country :"/>
                            <TextBlock Name="txtProfit" Foreground="ForestGreen"/>
                            <TextBlock Text="Popular payment method :"/>
                            <TextBlock Name="txtPayment" Foreground="ForestGreen"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <Grid Grid.Row="3">
                    <Button Name="btnPayment" Content="📠" HorizontalAlignment="Left" Click="btnPayment_Click"
                            Cursor="Hand" Height="auto" Width="auto" FontSize="30" Background="Transparent"
                            VerticalAlignment="Bottom"/>
                    <Button Name="btnUpdate" Content="📝" HorizontalAlignment="Right" Click="btnUpdate_Click"
                            Cursor="Hand" Height="auto" Width="auto" FontSize="30" Background="Transparent"
                            VerticalAlignment="Bottom" Margin="0,0,50,0"/>
                    <Button Name="btnClear" Content="🔄" HorizontalAlignment="Right" Click="btnClear_Click"
                            Cursor="Hand" Height="auto" Width="auto" FontSize="30" Background="Transparent"
                            VerticalAlignment="Bottom"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
