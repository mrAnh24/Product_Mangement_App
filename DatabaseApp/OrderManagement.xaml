<Window x:Class="DatabaseApp.OrderManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseApp" ResizeMode="NoResize"
        xmlns:userControls="clr-namespace:DatabaseApp.View.UserControls"
        mc:Ignorable="d"  WindowStartupLocation="CenterScreen"
        Title="Order Management" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="369*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <userControls:MenuBar/>
        </Grid>

        <Grid Grid.Row="1" Background="SteelBlue" Margin="10,0,10,0" Grid.RowSpan="2">
            <Label Content="Order management" VerticalAlignment="Bottom" Margin="5,0,0,0"
                   Foreground="WhiteSmoke" FontSize="30" FontStyle="Italic" FontWeight="DemiBold"/>
            <Button Name="btnRefresh" Content="🔄" HorizontalAlignment="Right" Background="Transparent"
                    VerticalAlignment="Center" Margin="0,0,10,0" FontSize="24" Width="auto" Height="auto"
                    Click="btnRefresh_Click" Cursor="Hand"/>
        </Grid>

        <Grid Grid.Row="2" Background="SteelBlue" Margin="10,22,10,10" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.52*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10,0,10,0">
                    <ComboBox Name="cbStage" Width="auto" Foreground="Black" IsEditable="False"
                              SelectionChanged="cbStage_SelectionChanged">
                        <ComboBoxItem Content="Full"/>
                        <ComboBoxItem Content="Stage 0"/>
                        <ComboBoxItem Content="Stage 1"/>
                        <ComboBoxItem Content="Stage 2"/>
                        <ComboBoxItem Content="Stage 3"/>
                        <ComboBoxItem Content="Stage 4"/>
                    </ComboBox>
                </Grid>

                <Grid Grid.Row="1">
                    <DataGrid Name="dgOrder" CanUserAddRows="False" CanUserDeleteRows="False" Margin="10,0,10,10"
                          AlternatingRowBackground="LightGray" AlternationCount="2" ColumnWidth="*"
                          IsReadOnly="True" Grid.ColumnSpan="2" SelectionMode="Single"
                          AutoGenerateColumns="True" AutoGeneratedColumns="dgOrder_AutoGeneratedColumns"
                          HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="Selected" Handler="DataGridRow_Selected"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="0.6*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="WhiteSmoke" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="CornflowerBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="23*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Summary" HorizontalAlignment="Left" FontSize="20"
                               VerticalAlignment="Center" FontWeight="DemiBold"
                               Foreground="WhiteSmoke" Grid.Column="1" Margin="15,0,0,0"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <StackPanel Margin="8,5,8,5" Background="white">
                            <TextBlock Text="Customer name: " FontSize="15"/>
                            <TextBlock Name="txtName" Text="..." FontSize="14" Foreground="ForestGreen"/>
                            <TextBlock Text="Payment method: " FontSize="15"/>
                            <TextBlock Name="txtPaymentMethod" Text="..." FontSize="14" Foreground="ForestGreen"/>
                            <TextBlock Text="Payment status: " FontSize="15"/>
                            <TextBlock Name="txtStatus" Text="..." FontSize="14" Foreground="ForestGreen"/>
                            <TextBlock Text="Order status: " FontSize="15"/>
                            <TextBlock Name="txtStage" Text="..." FontSize="14" Foreground="ForestGreen"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,10,10">
                    <StackPanel>
                        <Button Name="btnDetail" Content="        Order detail            " Width="auto"
                                 Margin="0,10,0,0" Height="30" Cursor="Hand" Click="btnDetail_Click"/>
                        <Button Name="btnCancel" Content="       Cancel order        " Width="auto"
                                Margin="0,10,0,0" Height="30" Cursor="Hand" Click="btnCancel_Click"/>
                        <Button Name="btnUpdate" Content="      Approve order       " Width="auto"
                                Margin="0,10,0,0" Height="30" Cursor="Hand" Click="btnUpdate_Click"
                                Visibility="Collapsed"/>
                        <Button Name="btnPrint" Content="Print all order" Width="auto"
                                Margin="0,10,0,0" Height="30" Cursor="Hand" Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
