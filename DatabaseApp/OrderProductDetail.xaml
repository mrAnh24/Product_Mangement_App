<Window x:Class="DatabaseApp.OrderProductDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseApp"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Closed="Window_Closed"
        Title="Product Detail" Height="400" Width="460">
    <Grid Background="SteelBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Name="txtHeader" Text="Order {Order name} Products" VerticalAlignment="Center" Foreground="WhiteSmoke"
                       HorizontalAlignment="Center" FontSize="24" FontWeight="DemiBold"/>
        </Grid>
        
        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <TextBox Name="tbSearchBox" VerticalAlignment="Center" Height="25"/>
                    <Button Name="btnSearchClear" Width="80" HorizontalAlignment="Right" Content="X"
                            Background="LightGray" Foreground="Transparent" BorderThickness="0"
                            Click="btnSearchClear_Click" Margin="3"/>
                    <ComboBox Name="cbSearch" HorizontalAlignment="Right" Foreground="Black"
                              Width="auto" SelectionChanged="cbSearch_SelectionChanged" IsEditable="False">
                        <ComboBoxItem Content="Name"/>
                        <ComboBoxItem Content="Code"/>
                        <ComboBoxItem Content="Amount"/>
                    </ComboBox>
                </Grid>

                <Grid Grid.Column="1">
                    <Button Name="btnSearch" HorizontalAlignment="Left" Content="Search"
                            Cursor="Hand" Click="btnSearch_Click"/>
                    <Button Name="btnRefresh" HorizontalAlignment="Right" Content="🔄"
                            Cursor="Hand" Click="btnRefresh_Click"  Background="Transparent"
                             Width="auto" Height="auto" FontSize="22" Margin="0,-3,-3,0"/>
                </Grid>
            </Grid>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <DataGrid Name="dgProduct" Grid.ColumnSpan="3" AlternatingRowBackground="LightGray" 
                              AlternationCount="2" IsReadOnly="True" SelectionMode="Single"
                              CanUserResizeRows="False" ScrollViewer.CanContentScroll="False"
                              AutoGeneratedColumns="dgProduct_AutoGeneratedColumns" ColumnWidth="*"
                              HorizontalScrollBarVisibility="Disabled" Margin="0,5,5,0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="Selected" Handler="DataGridRow_Selected"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.6*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="WhiteSmoke" Margin="5,6,0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="CornflowerBlue">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontSize="20" Text="Order bill" FontWeight="DemiBold"
                                       Foreground="WhiteSmoke"/>
                        </Grid>

                        <Grid Grid.Row="1" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.6*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Name="txtNumber" Text="..." HorizontalAlignment="Right"
                                                Margin="0,0,5,5"/>
                                    <TextBlock Text="Totals: " HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Column="1">
                                <StackPanel>
                                    <TextBlock Text="Products" HorizontalAlignment="Left" Margin="5,0,0,5"/>
                                    <TextBlock Name="txtTotal" Text=" 0 $" HorizontalAlignment="Left"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Background="WhiteSmoke" Margin="5,5,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="CornflowerBlue">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                       FontSize="20" Text="Product detail" FontWeight="DemiBold"
                                       Foreground="WhiteSmoke"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="0.9*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Margin="5,10,0,5">
                                <StackPanel>
                                    <TextBlock Text="Product:" Margin="0,0,0,5"/>
                                    <TextBlock Text="Product Code:" Margin="0,0,0,5"/>
                                    <TextBlock Text="Price:" Margin="0,0,0,5"/>
                                    <TextBlock Text="Description:" Margin="0,0,0,5"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Column="1" Margin="5,10,5,5">
                                <StackPanel>
                                    <TextBlock Name="txtProduct" Text="..." Margin="0,0,0,5"/>
                                    <TextBlock Name="txtProductCode" Text="..." Margin="0,0,0,5"/>
                                    <TextBlock Name="txtPrice" Text="..." Margin="0,0,0,5"/>
                                    <TextBlock Name="txtDescription" Text="..." Margin="0,0,0,5"
                                               TextWrapping="WrapWithOverflow"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.6*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="20,0,0,0">
                <TextBlock Name="txtCount" VerticalAlignment="Center" FontSize="18"
                           Foreground="WhiteSmoke" Text="Number of Products: ..."/>
            </Grid>

            <Grid Grid.Column="1" Margin="0,0,20,0">
                <Button Name="btnPrint" Content="Print" Click="btnPrint_Click"
                        HorizontalAlignment="Left" Cursor="Hand"/>
                <Button Name="btnBack" Content="Back" Click="btnBack_Click"
                        HorizontalAlignment="Right" Cursor="Hand"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
