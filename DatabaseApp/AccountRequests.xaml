<Window x:Class="DatabaseApp.AccountRequests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseApp" ResizeMode="NoResize"
        xmlns:userControls="clr-namespace:DatabaseApp.View.UserControls"
        mc:Ignorable="d"  WindowStartupLocation="CenterScreen"
        Title="Account Requests" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <userControls:MenuBar/>
        </Grid>

        <Grid Grid.Row="1" Margin="10,0,10,10" Background="SteelBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="Admin request log" VerticalAlignment="Center" Margin="10"
                           FontSize="30" FontWeight="DemiBold" FontStyle="Italic"
                           Foreground="WhiteSmoke"/>
                <Button Name="btnRefresh" Content="🔄" HorizontalAlignment="Right" FontSize="30"
                        Margin="0,0,6,0" Click="btnRefresh_Click" Cursor="Hand" Height="auto" 
                        Background="Transparent" VerticalAlignment="Center" Width="auto"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <DataGrid Name="dgActivity" Grid.ColumnSpan="3" AlternatingRowBackground="LightGray" 
                              AlternationCount="2" IsReadOnly="True" SelectionMode="Single"
                              CanUserResizeRows="False" ScrollViewer.CanContentScroll="False" 
                              AutoGenerateColumns="True" Margin="10,0,10,10" 
                              AutoGeneratedColumns="dgActivity_AutoGeneratedColumns">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="Selected" Handler="DataGridRow_Selected"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
<!--
                    <DataGrid Name="dgRequest" Grid.ColumnSpan="3" AlternatingRowBackground="LightGray" 
                              AlternationCount="2" IsReadOnly="True" SelectionMode="Single" Margin="10,0,10,10" 
                              CanUserResizeRows="False" ScrollViewer.CanContentScroll="False" Visibility="Collapsed"
                              HorizontalScrollBarVisibility="Disabled" AutoGenerateColumns="True"
                              AutoGeneratedColumns="dgRequest_AutoGeneratedColumns" ColumnWidth="*">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="Selected" Handler="DataGridRow_Selected_1"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>

                    <DataGrid Name="dgPreOrder" Grid.ColumnSpan="3" AlternatingRowBackground="LightGray" 
                              AlternationCount="2" IsReadOnly="True" SelectionMode="Single" Margin="10,0,10,10" 
                              CanUserResizeRows="False" ScrollViewer.CanContentScroll="False" Visibility="Collapsed"
                              HorizontalScrollBarVisibility="Disabled" AutoGenerateColumns="True"
                              AutoGeneratedColumns="dgPreOrder_AutoGeneratedColumns"  ColumnWidth="*">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="Selected" Handler="DataGridRow_Selected_2"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>-->
                </Grid>

                <Grid Grid.Column="1" Margin="0,0,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="0.8*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <ComboBox Name="cbFilter" Foreground="Black" Width="auto" VerticalAlignment="Bottom"
                                  IsEditable="False" SelectionChanged="cbFilter_SelectionChanged" Margin="0,0,0,9">
                            <ComboBoxItem Content="Activities"/>
                            <ComboBoxItem Content="Account requests"/>
                            <ComboBoxItem Content="Pre-Order"/>
                        </ComboBox>
                    </Grid>

                    <Grid Grid.Row="1" Background="WhiteSmoke" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Background="CornflowerBlue">
                            <TextBlock Text="Option filter" HorizontalAlignment="Center" FontSize="20"
                                       VerticalAlignment="Center" FontWeight="DemiBold"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <TextBlock Name="txtfilter1" Text="Admin log" VerticalAlignment="Center"
                                               FontStyle="Normal" FontSize="16" Margin="10,0,0,0"/>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <TextBlock Name="txtfilter2" Text="Notification" VerticalAlignment="Center"
                                               FontStyle="Normal" FontSize="16" Margin="10,0,0,0"/>
                                </Grid>
                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Rectangle Name="Mfilter1" Fill="LightGray" Margin="4,10,4,10"
                                               RadiusX="10" RadiusY="10"/>
                                    <Ellipse Name="Lfilter1" Fill="WhiteSmoke" Height="20" Width="20" 
                                             Margin="0,0,22,0"/>
                                    <Ellipse Name="Rfilter1" Fill="LightGray" Height="20" Width="20" 
                                             Margin="22,0,0,0"/>
                                    <Button Name="btnFilter1" Background="Transparent" Height="30"
                                            Cursor="Hand" Width="60" Click="btnFilter1_Click"/>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Rectangle Name="Mfilter2" Fill="LightGray" Margin="4,10,4,10"
                                               RadiusX="10" RadiusY="10"/>
                                    <Ellipse Name="Lfilter2" Fill="WhiteSmoke" Height="20" Width="20" 
                                             Margin="0,0,22,0"/>
                                    <Ellipse Name="Rfilter2" Fill="LightGray" Height="20" Width="20" 
                                             Margin="22,0,0,0"/>
                                    <Button Name="btnFilter2" Background="Transparent" Height="30"
                                            Cursor="Hand" Width="60" Click="btnFilter2_Click"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="2">
                        <StackPanel>
                            <Button Name="btnApprove" Content="Approve" FontSize="20" Width="200"
                                    Height="34" Cursor="Hand" Click="btnApprove_Click" Visibility="Collapsed"/>
                            <Button Name="btnCancel" Content="Cancel" FontSize="20" Width="200"
                                    Height="34" Margin="0,8,0,0" Cursor="Hand" Click="btnCancel_Click"/>
                            <Button Name="btnDetails" Content="Detail" FontSize="20" Width="200"
                                    Height="34" Margin="0,8,0,0" Cursor="Hand" Click="btnDetails_Click"/>
                            <Button Name="btnPrint" Content="Print" FontSize="20" Width="200"
                                    Height="34" Margin="0,8,0,0" Cursor="Hand" Click="btnPrint_Click"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
