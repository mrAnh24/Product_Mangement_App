<Window x:Class="DatabaseApp.UpdateProductAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseApp"
        xmlns:userControls="clr-namespace:DatabaseApp.View.UserControls"
        mc:Ignorable="d"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="Update Product (Admin)" Height="500" Width="500">
    <Grid Background="SteelBlue" Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <userControls:MenuBar Margin=" 0,0,0,5"/>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="Product management"
                       FontSize="30" Foreground="WhiteSmoke"/>
            <Button Name="btnRefresh" Content="🔄" HorizontalAlignment="Right" FontSize="26" Width="auto"
                    Margin="0,0,2,0" Click="btnRefresh_Click"  Cursor="Hand" Height="auto" 
                    Background="Transparent" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.6*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <DataGrid Name="dgProduct" Grid.ColumnSpan="3" AlternatingRowBackground="LightGray" 
                          AlternationCount="2" IsReadOnly="True" SelectionMode="Single" Margin="5" 
                          CanUserResizeRows="False" AutoGenerateColumns="True" ColumnWidth="*"
                          AutoGeneratedColumns="dgProduct_AutoGeneratedColumns" MouseDoubleClick="dgProduct_MouseDoubleClick">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="Selected" Handler="DataGridRow_Selected"/>
                            </Style>
                        </DataGrid.Resources>
                    </DataGrid>
                </Grid>

                <Grid Grid.Row="1">
                    <TextBlock Name="txtCount" Text="Number of product: ..." Margin="5,0,0,5"
                               VerticalAlignment="Bottom" FontSize="20" Foreground="WhiteSmoke"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="0.8*"/>
                    <RowDefinition Height="0.8*"/>
                    <RowDefinition Height="0.4*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <ComboBox Name="cbFilter" Width="auto" Margin="0,5,5,0" IsEditable="False"
                              SelectionChanged="cbFilter_SelectionChanged" Foreground="Black">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Available"/>
                        <ComboBoxItem Content="On sale"/>
                        <ComboBoxItem Content="Unavailable"/>
                        <ComboBoxItem Content="Sold Out"/>
                        <ComboBoxItem Content="Discontinue"/>
                    </ComboBox>
                </Grid>

                <Grid Grid.Row="1" Margin="0,5,5,0" Background="WhiteSmoke">
                    <Image Source="D://cable.png"/>
                </Grid>

                <Grid Grid.Row="2" Margin="0,0,5,5" Background="WhiteSmoke">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <StackPanel Margin="5,5,2,0" Grid.RowSpan="2">
                                <TextBlock Text="ProductCode"/>
                                <TextBox Name="txtPCode" IsEnabled="False" Text="0000-AA" Height="20"/>
                                <TextBlock Text="Type"/>
                                <ComboBox Name="cbType" Width="auto" Height="20" Foreground="Black"
                                          IsEditable="False" FontSize="10" IsEnabled="False">
                                    <ComboBoxItem Name="cbT1" Content="Meat"/>
                                    <ComboBoxItem Name="cbT2" Content="Dairy"/>
                                    <ComboBoxItem Name="cbT3" Content="Vegetable"/>
                                    <ComboBoxItem Name="cbT4" Content="Drink"/>
                                    <ComboBoxItem Name="cbT5" Content="Fruit"/>
                                    <ComboBoxItem Name="cbT6" Content="Dessert"/>
                                    <ComboBoxItem Name="cbT7" Content="Snack"/>
                                    <ComboBoxItem Name="cbT8" Content="Other"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Margin="5,5,2,0" Grid.RowSpan="2">
                                <TextBlock Name="ttDA" Text="Discount %" Background="WhiteSmoke" Visibility="Hidden"/>
                                <TextBox Name="txtDA" IsEnabled="False" Text="20" Height="20" Visibility="Hidden"/>
                            </StackPanel>

                            <Button Name="btnDClear" Width="34" Height="19" Margin="0,0,2,15" 
                                    Grid.RowSpan="2" HorizontalAlignment="Right" Cursor="Hand"
                                    Background="LightGray" VerticalAlignment="Center"
                                    Visibility="Hidden" Click="btnDClear_Click"/>
                            <Button Name="pDUp" Height="9.5" Width="9" HorizontalAlignment="Right"
                                    Margin="0,0,19,24.5" Content="△" FontSize="5" Cursor="Hand"
                                    VerticalAlignment="Center" Visibility="Hidden"
                                    Click="pDUp_Click"/>
                            <Button Name="pDDown" Height="9.5" Width="9" HorizontalAlignment="Right"
                                    Margin="0,0,19,5.5" Content="▽" FontSize="5" Cursor="Hand"
                                    VerticalAlignment="Center" Visibility="Hidden"
                                    Click="pDDown_Click"/>
                            <Button Name="btnDAdd" Width="16" Height="19" Margin="0,0,2,15" 
                                    Grid.RowSpan="2" VerticalAlignment="Center" Content="+25" 
                                    HorizontalAlignment="Right" FontSize="8" Cursor="Hand"
                                    Visibility="Hidden" Click="btnDAdd_Click"/>
                        </Grid>

                        <Grid Grid.Column="1" Margin="2.5,5,5,0">
                            <StackPanel>
                                <TextBlock Text="Price"/>
                                <TextBox Name="txtPrice" PreviewTextInput="txtPrice_PreviewTextInput"
                                         MaxLength="6" IsEnabled="False" Text="0" Height="20"/>
                                <TextBlock Text="Amount"/>
                                <TextBox Name="txtAmount" PreviewTextInput="txtAmount_PreviewTextInput"
                                         MaxLength="2" IsEnabled="False" Text="0" Height="20"/>
                            </StackPanel>

                            <TextBox Name="txtDiscount" Height="20" Margin="0,0,0,22"
                                     Foreground="ForestGreen" IsEnabled="False"
                                     Visibility="Collapsed"/>

                            <Button Name="btnPClear" Width="34" Height="18" Margin="0,0,1,22" 
                                    Grid.RowSpan="2" HorizontalAlignment="Right" Cursor="Hand"
                                    Background="LightGray" Click="btnPClear_Click"
                                    Visibility="Collapsed"/>
                            <Button Name="pPUp" Height="8.5" Width="9" HorizontalAlignment="Right"
                                    Margin="0,0,18,31.5" Content="△" FontSize="5" Cursor="Hand"
                                    Click="pPUp_Click" Visibility="Collapsed"/>
                            <Button Name="pPDown" Height="8.5" Width="9" HorizontalAlignment="Right"
                                    Margin="0,0,18,12.5" Content="▽" FontSize="5" Cursor="Hand"
                                    Click="pPDown_Click" Visibility="Collapsed"/>
                            <Button Name="btnPAdd" Width="16" Height="18" Margin="0,0,1,22" 
                                    Grid.RowSpan="2" Content="+50" Click="btnPAdd_Click"
                                    HorizontalAlignment="Right" FontSize="8" Cursor="Hand"
                                    Visibility="Collapsed"/>

                            
                            <Button Name="btnAClear" Width="34" Height="18" Margin="0,0,1,4" 
                                    Grid.RowSpan="2" HorizontalAlignment="Right" Cursor="Hand"
                                    Background="LightGray" VerticalAlignment="Bottom"
                                    Click="btnAClear_Click" Visibility="Collapsed"/>
                            <Button Name="pAUp" Height="8.5" Width="9" HorizontalAlignment="Right"
                                    Margin="0,0,18,13.5" Content="△" FontSize="5" Cursor="Hand"
                                     VerticalAlignment="Bottom" Click="pAUp_Click" Visibility="Collapsed"/>
                            <Button Name="pADown" Height="8.5" Width="9" HorizontalAlignment="Right"
                                    Margin="0,0,18,4" Content="▽" FontSize="5" Cursor="Hand"
                                     VerticalAlignment="Bottom" Click="pADown_Click" Visibility="Collapsed"/>
                            <Button Name="btnAAdd" Width="16" Height="18" Margin="0,0,1,4" 
                                    Grid.RowSpan="2" VerticalAlignment="Bottom" Content="+10" 
                                    HorizontalAlignment="Right" FontSize="8" Cursor="Hand"
                                    Click="btnAdd_Click" Visibility="Collapsed"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" Margin="5">
                        <ComboBox Name="cbStatus" Width="auto" Height="20" Foreground="Black"
                                  IsEditable="False" FontSize="12" IsEnabled="false"
                                  SelectionChanged="cbStatus_SelectionChanged">
                            <ComboBoxItem Name="cbiAvailable" Content="Available"/>
                            <ComboBoxItem Name="cbiOnSale" Content="On sale"/>
                            <ComboBoxItem Name="cbiUnavailable" Content="Unavailable"/>
                            <ComboBoxItem Name="cbiSoldOut" Content="Sold Out"/>
                            <ComboBoxItem Name="cbiDiscontinue" Content="Discontinue"/>
                        </ComboBox>
                        
                        <Button Name="btnDiscount" Content="Show discount" Height="20"
                                Width="80" FontSize="10" HorizontalAlignment="Right"
                                Margin="0,0,18,0" Visibility="Collapsed" Cursor="Hand"
                                Click="btnDiscount_Click" IsEnabled="False"
                                Foreground="Black"/>
                    </Grid>
                </Grid>

                <Grid Grid.Row="3" Margin="0,0,5,0">
                    <StackPanel VerticalAlignment="Bottom">
                        <Button Name="btnUpdate" Width="200" Margin="0,5,0,5" Content="Update"
                                Click="btnUpdate_Click" Cursor="Hand"/>
                        <Button Name="btnDelete" Width="200" Margin="0,0,0,5" Content="Delete"
                                Click="btnDelete_Click" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
